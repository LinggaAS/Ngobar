@model Ngobar.Models.Balasan.BalasanPostModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Reply | @Model.JudulPost
            <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl); background-size:100%"></div>
            <span id="headingBtn"><a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.IdForum" class="btn btn-back">Back to @Model.NamaForum</a></span>
        </div>
    </div>
    <div class="row">
        <div class="replyOriginalPost">
            <h3>
                @Model.JudulPost
            </h3>
            <p>
                @Model.KontenPost
            </p>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                You're submitting this Reply as <span class="authorBlockName">@Model.NamaAuthor</span>
            </div>
            <form asp-action="TambahBalasan" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="KontenBalasan">Post Content</label>
                    <textarea asp-for="KontenBalasan" rows="20" class="form-control" placeholder="Write your reply here."></textarea>
                    <span asp-validation-for="KontenBalasan" class="text-danger"></span>
                </div>
                <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="IdPembuat" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="NamaForum" type="hidden" />
                <input asp-for="IdForum" type="hidden" />
            </form>
        </div>
    </div>
</div>