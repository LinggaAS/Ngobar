@model Ngobar.Models.Balasan.BalasanPostModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Komentar | @Model.JudulPost
        </div>    
        <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl); background-size:100%;"></div>
            <span id="headingBtn"><a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">Kembali ke Post</a></span>
        </div>
    <div class="row">
        <div id="originalPost">
            <h3>
                @Model.JudulPost
            </h3>
            <p>
                @Model.KontenPost
            </p>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                Kamu mengomentari sebagai <strong><span class="authorBlockName">@Model.NamaAuthor</span></strong>
            </div>
            <form asp-action="TambahBalasan" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="KontenBalasan">Konten</label>
                    <textarea asp-for="KontenBalasan" rows="20" class="form-control" placeholder="Ketik komentar..."></textarea>
                    <span asp-validation-for="KontenBalasan" class="text-danger"></span>
                </div>
                <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Komentar</button>
                <input asp-for="IdPembuat" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="NamaForum" type="hidden" />
                <input asp-for="IdForum" type="hidden" />
            </form>
        </div>
    </div>
</div>